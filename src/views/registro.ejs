<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: "formulario registro" }) %>
<link rel="stylesheet" href="/css/registro.css">

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <!-- /Header -->

            <form action="/users/registro" method="post">
                <section class="formulario_section">
                <div class="nombre">
                <label for="first_name">Nombre</label>
                <input id="cuadro_texto" type="text" name="first_name" id="first_name" value="<%= locals.old && old.first_name %>">
                <% if (locals.errors && errors.first_name) { %>
                <p class="feedback"><%= errors.first_name.msg %></p>
                <% } %>
                </div>
            
                <div class="apellido">
                <label for="last_name">Apellido</label>
                <input id="cuadro_texto" type="text" name="last_name" id="last_name" value="<%= locals.old && old.last_name %>">
                <% if (locals.errors && errors.last_name) { %>
                <p class="feedback"><%= errors.last_name.msg %></p>
                <% } %>
                </div>
            
                <div class="email">
                <label for="email">Correo electrónico</label>
                <input id="cuadro_texto" type="email" name="email" id="email" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.email) { %>
                <p class="feedback"><%= errors.email.msg %></p>
                <% } %>
                </div>
            
                <div class="contraseña">
                <label for="password">Contraseña</label>
                <input id="cuadro_texto" type="password" name="password" id="password" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.password) { %>
                <p class="feedback"><%= errors.password.msg %></p>
                <% } %>
                </div>
            
                <div class="boton-registro">
                <a href="/"><input id="boton_enviar" type="submit" value="Registrarse"></a>
                </div>
                <div>
                    <lebel for="remember"> Mantener sesion </lebel>
                    <imput type="checkbox" name="remember" value="true"> </imput>
                </div>
                </section>
                </form>
    </body>

</html>